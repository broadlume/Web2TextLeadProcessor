{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"include": ["app/modules/*/src/**/*.ts"]
	},
	"linter": {
		"include": ["app/modules/*/src/**/*.ts"],
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off",
				"noNonNullAssertion": "off",
				"noInferrableTypes": "off"
			},
			"complexity": {
				"useLiteralKeys": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"performance": {
				"noDelete": "off"
			}
		}
	}
}
