{
  "name": "restate-ts-template",
  "version": "0.0.1",
  "description": "Template for JavaScript/TypeScript services running with Restate (https://github.com/restatedev/) ",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc --noEmitOnError",
    "prebundle": "rm -rf dist",
    "bundle": "esbuild src/app.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
    "postbundle": "cd dist && zip -r index.zip index.js*",
    "app": "node ./dist/app.js",
    "app-dev": "ts-node-dev --watch ./src --respawn --transpile-only ./src/app.ts",
    "register-with-restate": "restate invocations cancel 'Lead' --kill --yes || true; restate state clear 'Lead' --yes || true; restate deployments reg web2text-web2text-1:9075 --force --yes"
  },
  "dependencies": {
    "@restatedev/restate": "^1.0.2",
    "@restatedev/restate-sdk": "^1.0.0",
    "@twilio/conversations": "^2.5.0",
    "dotenv": "^16.4.5",
    "dynamoose": "^4.0.1",
    "libphonenumber-js": "^1.11.4",
    "twilio": "^5.2.0",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@types/node": "^20.12.7",
    "esbuild": "^0.18.12",
    "ts-node-dev": "^1.1.1",
    "typescript": "^5.4.5"
  }
}
